<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yonghyun.myapplication.BookmarkActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DAA520"
        android:id="@+id/totalText"
        android:textSize="22sp"
        android:text="Total Number of bookmark Word"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/totalText"
        android:background="#DAA520"
        android:textSize="22sp"
        android:gravity="right"
        android:id="@+id/totalNumber"
        android:text="Text" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/totalNumber"
        android:id="@+id/bookmarkList">
    </ListView>

</RelativeLayout>
