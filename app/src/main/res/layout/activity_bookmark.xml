<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yonghyun.myapplication.BookmarkActivity"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/total_text_shape"
        android:id="@+id/totalText"
        android:textSize="22sp"
        android:layout_marginLeft="5dp"
        android:text="Total Number of bookmark Word"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/totalText"
        android:background="@drawable/total_num_shape"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:gravity="right"
        android:id="@+id/totalNumber"
        android:text="Text" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/totalNumber"
        android:id="@+id/bookmarkList">
    </ListView>

</RelativeLayout>